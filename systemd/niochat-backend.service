[Unit]
Description=NioChat Backend (Daphne)
After=network.target

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/var/www/niochat/backend
Environment=PATH=/var/www/niochat/venv/bin
ExecStart=/var/www/niochat/venv/bin/daphne -b 0.0.0.0 -p 8010 niochat.asgi:application
ExecReload=/bin/kill -s HUP $MAINPID
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target 